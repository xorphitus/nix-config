{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js"
  },
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(jq:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(jj:*)",
      "mcp__*",
      "ListMcpResourcesTool",
      "ReadMcpResourceTool"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(jj rebase:*)",
      "Read(.env*)",
      "Read(*.pem)",
      "Read(*.key)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Read(**/*token*)",
      "Read(**/*secret*)",
      "Read(**/secrets/**)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Write(**/*token*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/notification.sh ask"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/notification.sh done"
          }
        ]
      }
    ]
  }
}
